<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayoutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/side_gradient"
        android:orientation="vertical"
        android:padding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/post_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="22dp"
                android:gravity="center_vertical"
                android:text="34234"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:ignore="RelativeOverlap" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/post_author_photo"
                android:layout_width="40dp"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_action_account_circle_40" />


            <TextView
                android:id="@+id/categ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/post_author"
                android:layout_alignStart="@+id/post_author"
                android:layout_below="@+id/post_author"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:padding="6dp"
                android:textSize="12sp"
                android:text="@string/cats_t"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/post_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="6dp"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/post_author_photo"
                android:layout_toRightOf="@+id/post_author_photo"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                tools:text="" />

            <TextView
                android:id="@+id/post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/post_author"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_toEndOf="@+id/categ"
                android:layout_toRightOf="@+id/categ"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp"
                android:padding="6dp"
                android:textColor="@color/white"
                android:visibility="gone"
                tools:text="" />


            <com.rilixtech.materialfancybutton.MaterialFancyButton
                android:id="@+id/btn_add_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:baselineAligned="false"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="Еще"
                fancy:mfb_borderColor="#90FFFFFF"
                fancy:mfb_borderWidth="1dp"
                fancy:mfb_defaultColor="@color/mfb_defaultColor"
                fancy:mfb_focusColor="@color/mfb_focusColor"
                fancy:mfb_iconPosition="left"
                fancy:mfb_radius="20dp"
                fancy:mfb_textColor="#FFFFFF" />


        </RelativeLayout>


        <TextView
            android:id="@+id/post_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="@color/white"
            tools:text="" />

        <ImageView
            android:id="@+id/iv_piture"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/post_itemTag"
            android:maxHeight="300dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:background="@color/white"
        android:weightSum="1.0">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9">

            <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
                android:id="@+id/field_comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:hint="@string/write_comment"
                android:maxLines="1"
                android:singleLine="true" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/emoji_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:padding="4dp"
            android:src="@drawable/ic_emoji" />

        <ImageView
            android:id="@+id/button_post_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_action_send" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/comment_form"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayoutInfo"
        android:background="@color/white"
        android:visibility="visible"
        tools:listitem="@layout/item_comment">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
